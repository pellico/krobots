{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch vsdbg",
            "type": "cppvsdbg",
            "request": "launch",
            "stopAtEntry": false,
              "preLaunchTask": "cargo make build",
           "program":"${workspaceFolder}/target/debug/ktanks_server.exe",
            "args": [
              "-c",
                "test_tanks/test.toml"
            ],
     
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "RUST_LOG",
                    "value": "ktanks_server=info"
                },
                {
                    "name": "_NO_DEBUG_HEAP",
                    "value": "1"
                }
            ],
            "console": "externalTerminal"
        },
        {
            "type": "lldb",
            
            "request": "launch",
            "name": "Debug executable 'krobots'",
            "preLaunchTask": "cargo make build",
            "program":"${workspaceFolder}/target/debug/ktanks_server.exe",
            "args": [
              "-c",
                "test_tanks/test.toml"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "RUST_LOG": "ktanks_server=info",
                "RUST_BACKTRACE": "1",
                "_NO_DEBUG_HEAP":"1"
            }
        },
        {
            "type": "lldb",
            
            "request": "launch",
            "name": "Debug wasm modules",
            "preLaunchTask": "cargo make build",
            "program":"${workspaceFolder}/target/release/ktanks_server.exe",
            "args": [
              "-c",
                "test_tanks/test.toml"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "RUST_LOG": "ktanks_server=info",
                "RUST_BACKTRACE": "1",
                "_NO_DEBUG_HEAP":"1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'krobots'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=ktanks_server",
                    "--package=ktanks_server"
                ],
                "filter": {
                    "name": "ktanks_server",
                    "kind": "bin"
                }
            },
            "args": [
                "2"
            ],
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "RUST_LOG",
                    "value": "trace"
                }
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ui_client'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ui_client",
                    "--package=ktanks_server"
                ],
                "filter": {
                    "name": "ui_client",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "trace",
                "RUST_BACKTRACE": "1",
            }
        },
    ]
}