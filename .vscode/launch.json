    "version": "0.2.0",
    "configurations": [

    {
        "name": "(Windows) Launch",
        "type": "cppvsdbg",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/krobots.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [{ "name": "RUST_LOG", "value": "debug" }],
        "console": "externalTerminal"
    },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'krobots'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=krobots",
                    "--package=krobots"
                ],
                "filter": {
                    "name": "krobots",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug",
                "RUST_BACKTRACE": "1",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'krobots'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=krobots",
                    "--package=krobots"
                ],
                "filter": {
                    "name": "krobots",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [{ "name": "RUST_LOG", "value": "debug" }]
        }
    ]
}